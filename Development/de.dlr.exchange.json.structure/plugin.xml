<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="de.dlr.exchange.json.structure.JsonGenerationHandler"
            id="de.dlr.ft.exchange.json.structure.JsonStructureGenerationCommand"
            name="Json Structure">
      </command>
      <command
            defaultHandler="de.dlr.exchange.json.structure.JsonMergeHandler"
            id="de.dlr.ft.exchange.json.structure.JsonStructureMergeCommand"
            name="Update model parameters">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="popup:nav_exp_arch">
         <command
               commandId="de.dlr.ft.exchange.json.structure.JsonStructureGenerationCommand"
               hoverIcon="icons/create.png"
               icon="icons/create.png"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <iterate
                     ifEmpty="false">
                  <or>
                     <reference
                           definitionId="de.dlr.exchange.base.expressions.IsFunctionFile">
                     </reference>
                     <reference
                           definitionId="de.dlr.exchange.base.expressions.IsSystemFile">
                     </reference>
                  </or>
               </iterate>
            </visibleWhen>
         </command>
      </menuContribution>
      <menuContribution
            locationURI="popup:edi_exp_arch">
         <command
               commandId="de.dlr.ft.exchange.json.structure.JsonStructureGenerationCommand"
               hoverIcon="icons/create.png"
               icon="icons/create.png"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <iterate
                     ifEmpty="false">
                  <instanceof
                        value="de.dlr.premise.element.AElement">
                  </instanceof>
               </iterate>
            </visibleWhen>
         </command>
      </menuContribution>
      <menuContribution
            locationURI="popup:premise.rcp.navigator">
         <menu
               icon="icons/notebook--arrow.png"
               id="nav_exp_arch"
               label="Export Architecture">
         </menu>
         <command
               commandId="de.dlr.ft.exchange.json.structure.JsonStructureMergeCommand"
               icon="icons/merge.png"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <and>
                  <count
                        value="1">
                  </count>
                  <iterate
                        ifEmpty="false"
                        operator="and">
                     <adapt
                           type="org.eclipse.core.resources.IResource">
                        <test
                              property="org.eclipse.core.resources.name"
                              value="*.json">
                        </test>
                     </adapt>
                  </iterate>
               </and>
            </visibleWhen>
         </command>
      </menuContribution>
      <menuContribution
            locationURI="popup:de.dlr.premise.system.presentation.SystemEditorID">
         <menu
               icon="icons/notebook--arrow.png"
               id="edi_exp_arch"
               label="Export Architecture">
         </menu>
      </menuContribution>
      <menuContribution
            locationURI="popup:de.dlr.premise.component.presentation.ComponentEditorID">
         <menu
               icon="icons/notebook--arrow.png"
               id="edi_exp_arch"
               label="Export Architecture">
         </menu>
      </menuContribution>
   </extension>

</plugin>
